# Database
# PostgreSQL connection string
# For local development: postgresql://USER:PASSWORD@localhost:5432/DATABASE_NAME
# For Vercel Postgres: Get from Vercel dashboard
# For Neon: Get from Neon dashboard
DATABASE_URL="postgresql://user:password@localhost:5432/nose_strips"

# Session Secret
# Generate a secure random string (32+ characters)
# You can use: openssl rand -base64 32
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Resend API Key
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_your_resend_api_key"

# Upstash Redis (for rate limiting)
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Admin Credentials (used during database seeding)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="changeme123"

# Product Configuration
# This will be stored in the database during seeding
NEXT_PUBLIC_PRODUCT_PRICE="19.99"
